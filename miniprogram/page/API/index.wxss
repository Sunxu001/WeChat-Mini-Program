/*背景*/
.index-hd{
  background: linear-gradient(180deg, rgba(0, 117, 255, 0.2) 0%, rgba(26, 133, 255, 0.165625) 13.54%, rgba(17, 129, 249, 0.134352) 20.43%, rgba(0, 121, 240, 0.0804464) 32.29%, rgba(149, 208, 253, 0.00591518) 68.75%, rgba(154, 211, 253, 0) 86.98%), #FFFFFF;
}
/*login模块*/
.login image{
  height: 6rem;
  width: 6rem;
}
.login button{
  margin-bottom: 2rem;
  background: #FFFFFF;
  box-shadow: 0px 4px 10px rgba(41, 40, 40, 0.35);
  border-radius: 10px;
}
/*信息页面模块*/ 
/*信息栏模块*/ 
.user-info { 
  width: 20rem;
  height: 12rem;
  margin-left: -0.5rem;
} 

.user-info image{ 
  position: relative; 
  line-height: 2rem; 
} 
.user-info button{ 
  width: 100%; 
  line-height: 2.5rem; 
  margin-top: 0; 
  border-bottom: 1px solid gray;
  background-color: #fff;
} 

.btn-icon{ 
  position:absolute; 
  float: inline-start; 
  left: 0.5rem; 
  height: 2.5rem; 
  width: 2.5rem ; 
} 
.wtxt{
  margin-left: -5rem;
}
.arrow-btn{ 
  position:absolute; 
  float: inline-end; 
  line-height: 2rem; 
  right: 0.5rem; 
  height: 2rem; 
  width: 2rem ; 
} 
