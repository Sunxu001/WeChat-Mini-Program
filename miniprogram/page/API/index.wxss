@import "../common/common.wxss";
/*背景*/
.index-hd{
  background: linear-gradient(180deg, rgba(0, 117, 255, 0.2) 0%, rgba(26, 133, 255, 0.165625) 13.54%, rgba(17, 129, 249, 0.134352) 20.43%, rgba(0, 121, 240, 0.0804464) 32.29%, rgba(149, 208, 253, 0.00591518) 68.75%, rgba(154, 211, 253, 0) 86.98%), #FFFFFF;
}
/*login模块*/
.login image{
  height: 6rem;
  width: 6rem;
}
.login button{
  background: #FFFFFF;
  box-shadow: 0px 4px 10px rgba(41, 40, 40, 0.35);
  border-radius: 10px;
}
/*信息页面模块*/
.user-info {
  width: 100%;
background-color: blueviolet;
}
.user-info text{
  font-size: 1.3rem;
} 
.user-info image{
  height: 3.5rem;
  width: 3.5rem ;
}
.user-info button{
  width: 100%;
  line-height: 5rem;
  background-color: orange;
}
