.section {
  width: 100%;
  height: 94%;
  background: linear-gradient(#d1e6ff, #f9fbff);
  display: flex;
  justify-content: center;
  padding-top: 50rpx;
}

.section__form {
  width: 85%;
  box-shadow: 0rpx 5rpx 10rpx 10rpx #bec0c3;
  background: #ffffff;
  border-radius: 40rpx;
  box-sizing: border-box;
  padding: 50rpx 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section__form__input {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input__item {
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0rpx 5rpx 10rpx 10rpx #e1e1e1;
  margin-bottom: 30rpx;
}

.section__upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.section__title {
  width: 110%;
  text-align: start;
  margin-bottom: 25rpx;
}

.section__upload__box {
  width: 100%;
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0rpx 5rpx 10rpx 10rpx #e1e1e1;
  margin-bottom: 30rpx;
}

.textarea__item {
  width: 100%;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 5rpx 10rpx 10rpx #e1e1e1;
}

.section__button__box{
  margin-top: 10rpx;
  width: 110%;
}

.section__button{
  text-align: center;
  background-color: #52c1ff;
  color: #ffffff;
}