.section{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(#d3eaff,#faffff);
  padding-top: 150rpx;
}

.section__head{
  width: 100%;
  height: 100rpx;
  padding: 0rpx 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  top: 0rpx;
  background-color: #d3eaff;
}

.section__head button{
  width:120rpx;
  height: 60rpx;
  padding: 0rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}

.date__title{
  text-align: center;
  font-size: 36rpx;
}

.section__item{
  width: 600rpx;
  background: white;
  padding: 20rpx;
  border-radius: 25rpx;
  box-shadow: 5rpx 5rpx 10rpx 5rpx black;
  margin-bottom: 50rpx;
}

.img{
  display: flex;
  flex-direction: column;
}


.img image{
  margin: 10rpx 0rpx;
  width: 200rpx;
  height: 200rpx;
}

.section__image{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
