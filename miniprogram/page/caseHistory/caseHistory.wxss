.section{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(#d3eaff,#faffff);
  padding-top: 150rpx;
  font-family: 'PingFang SC';
}

.section__head{
  width: 130%;
  height: 100rpx;
  padding: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  top: 0rpx;
  background-color: #d3eaff;
}

.section__head button{
  width:150rpx;
  height: 70rpx;
  padding: 5rpx ;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  font-family: 'PingFang SC';
}

.date__title{
  text-align: center;
  font-size: 40rpx;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info{
  font-family: 'PingFang SC';
}

.section__item{
  width: 600rpx;
  background: white;
  padding: 20rpx;
  border-radius: 25rpx;
  box-shadow: 5rpx 5rpx 10rpx 5rpx rgba(0, 0, 0, 0.25);
  margin-bottom: 50rpx;
}

.img{
  display: flex;
  flex-direction: column;
}


.img image{
  margin: 10rpx 0rpx;
  width: 200rpx;
  height: 200rpx;
}

.section__image{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.section__select image{
  width: 80rpx;
  height: auto;
  margin-bottom: 80rpx;
}