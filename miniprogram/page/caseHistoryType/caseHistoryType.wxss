.section {
  background-color: #d9eaff;
  display: flex;
  flex-direction: column;
}

.section__head {
  padding: 0rpx 60rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.section__head text {
  flex: 6;
  font-size: 50rpx;
}

.add__button {
  border-radius: 30rpx;
}

.section__date {
  padding: 30rpx 20rpx;
  background-color: #a8d7f9;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.date__tags {
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  padding: 15rpx;
}

.date__tags view {
  flex: 3;
  padding: 0rpx 60rpx;
  box-sizing: border-box;
  border-left: 1rpx solid black;
}

.form__data {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section__chats {
  width: 100%;
  height: 400rpx;
  border-radius: 25rpx;
  background-color: #ffffff;
}

.section__text{
  margin-top: 40rpx;
  background-color: #ffffff;
  border-radius: 25rpx;
  padding: 30rpx 20rpx;
  font-size: 24rpx;
}



