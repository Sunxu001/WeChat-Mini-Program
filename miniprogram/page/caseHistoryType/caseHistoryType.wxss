.section {
  background-color: #d9eaff;
  display: flex;
  flex-direction: column;
}

.section__head {
  padding: 30rpx 60rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.section__head text {
  flex: 6;
  font-size: 50rpx;
}

.add__button {
  border-radius: 30rpx;
}

.section__date {
  padding: 30rpx 20rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.date__tags {
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  padding: 15rpx;
}

.date__tags view {
  flex: 3;
  padding: 0rpx 60rpx;
  box-sizing: border-box;
  border-left: 1rpx solid black;
}

.form__data {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section__chats {
  width: 100%;
  height: 400rpx;
  border-radius: 25rpx;
  background-color: #ffffff;
}

.section__text{
  margin-top: 40rpx;
  background-color: #ffffff;
  border-radius: 25rpx;
  padding: 30rpx 20rpx;
  font-size: 24rpx;
}

.section__chats{
  margin-top: 20rpx;
  height: 420rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.canvas{
  width: 100%;
  height: 100%;
  z-index: auto;
}

.form__item {
  padding: 10rpx;
  width: 600rpx;
  border-top: 1px solid #dddddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form__item input{
  text-align: end;
}

.picker{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.section__button button {
  width: 620rpx;
  background-color: #6bd1d1;
}