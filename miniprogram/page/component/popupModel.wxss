.section__model {
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  background-color: #b4e0ff;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: height 0.5s;
}

.section__close {
  width: 90%;
  text-align: end;
  padding-top: 15rpx;
}

.section__title {
  font-size: 45rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.section__form {
  width: 80%;
  background-color: #ffffff;
  padding: 25rpx;
  border-radius: 25rpx;
  overflow: scroll;
}

.form__item {
  padding: 10rpx;
  border-top: 1px solid #dddddd;
  display: flex;
  justify-content: space-between;
}

.section__button {
  margin-top: 20rpx;
}

.section__button button {
  width: 640rpx;
  background-color: #6bd1d1;
}