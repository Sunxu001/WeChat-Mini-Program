.section__model {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: height 0.6s;
  box-sizing: border-box;
  padding: 30rpx 0rpx 150rpx 0rpx;
}

.section__close {
  width: 90%;
  text-align: end;
}

.section__title {
  font-size: 45rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.section__form {
  width: 80%;
  background-color: #ffffff;
  padding: 25rpx;
  border-radius: 25rpx;
  overflow: scroll;
}