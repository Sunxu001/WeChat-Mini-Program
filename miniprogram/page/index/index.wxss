/* @import "../common/index.wxss"; */
.page{
  display: flex;
  justify-content: center;
  background: linear-gradient(180deg, rgba(0, 117, 255, 0.2) 0%, rgba(0, 117, 255, 0) 100%), #FFFFFF; 
}
/*轮播图*/
.carousel{
  width: 950rpx;
  margin-top: 3%;
  margin-bottom: 5%;
}
.carousel image{
  width: 70%;
  padding-left: 15%;
  object-fit: cover;
  box-shadow: 0rpx 20rpx 40rpx rgba(0, 0, 0, 0.25);
  border-radius:30rpx 30rpx 30rpx 30rpx;
}
/*按钮*/
.btn {
  display:flex;
  width: 630rpx;
  height: 194rpx;
  margin-bottom: 5%;
}
.creat-btn{
  display:flex;
  align-items: center;
  justify-items: center;
  left: 23%;
  background:linear-gradient(180deg, rgba(255, 163, 196, 0.2) 35.94%, rgba(255, 163, 196, 0) 100%), #FFFFFF;
  box-shadow: 0rpx 16rpx 16rpx rgba(0, 0, 0, 0.05);
  border-radius: 15px;
}
.record-btn{
  display:flex;
  align-items: center;
  justify-items: center;
  right: -29%;
  background: linear-gradient(180deg, rgba(33, 175, 255, 0.2) 41.67%, rgba(33, 175, 255, 0.185714) 51.56%, rgba(33, 175, 255, 0) 100%), #FFFFFF;
  box-shadow: 0rpx 16rpx 16rpx rgba(0, 0, 0, 0.05);
  border-radius: 25rpx;
}
.creat-text{
  font: 34rpx 'PingFang SC';
}
.record-text{
  font: 34rpx 'PingFang SC';
}
.creat-icon{
  width: 100rpx;
  height: 100rpx;
  margin-right: -150rpx;
  padding:10rpx;
}
.record-icon{
  text-align: left;
  width: 160rpx;
  height: 115rpx;
  margin-right: -50rpx;
}
/*关心健康，从现在开始*/
.poster{
  height: 165rpx;
  width: 675rpx;
  margin-left: 145rpx;
  border-radius: 15px;
}
/*日历*/
.calendar {
  width: 65%;
  background: linear-gradient(#c2effd, #ffffff);
  padding: 30rpx;
  margin-top: 20rpx;
  border-radius: 15rpx;
  margin-left: 15%;
}

.calendar__title {
  font: 35rpx 'PingFang SC';
  font-weight: 550;
}

.calendar__text {
  font: 29rpx 'PingFang SC';
}