/* @import "../common/index.wxss"; */
.page{
  display: flex;
  justify-content: center;
}
/*轮播图*/
.carousel{
  width: 100%;
  height: 10rem;
}
.carousel image{
  width: 100%;
  height: 13rem;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);
  border-radius: 15px; 
  object-fit: contain;
}
.item{
  position: absolute;
}
/*按钮*/
.btn {
  display: flex;
  margin: 0 1rem;
}
.creat-btn{
  display: inline;
  right: 0.5rem;
  background:linear-gradient(180deg, rgba(255, 163, 196, 0.2) 35.94%, rgba(255, 163, 196, 0) 100%), #FFFFFF;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.05);
  border-radius: 15px;
}
.record-btn{
left: 0.5rem;
background: linear-gradient(180deg, rgba(33, 175, 255, 0.2) 41.67%, rgba(33, 175, 255, 0.185714) 51.56%, rgba(33, 175, 255, 0) 100%), #FFFFFF;
box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.05);
border-radius: 15px;
}
.creat-text{
  text-align: left;
}
.creat-icon{
  width: 90rpx;
  height: 90rpx;
  margin-left: 15rpx;
}
.record-icon{
  width: 90rpx;
  height: 90rpx;
}
/*关心健康，从现在开始*/
.poster{
  height: 200rpx;
  width: 95%;
  margin-left: 20rpx;
  border-radius: 15px;
}
.calendar {
  width: 90%;
  background: linear-gradient(#c2effd, #ffffff);
  padding: 30rpx;
  border-radius: 15rpx;
  margin-left: 1%;
}

.calendar__title {
  font-size: 35rpx;
  font-weight: 550;
}

.calendar__text {
  font-size: 26rpx;
}